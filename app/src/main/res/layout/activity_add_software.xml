<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="TAMBAH SOFTWARE" />


        <LinearLayout
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="18dp"
                android:text="pilih software"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Spinner
                android:layout_weight="1"
                android:id="@+id/spin_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/newsoft"
                    android:background="@color/transparent"
                    android:layout_gravity="right"
                    android:src="@drawable/addsoft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/deletesoft"
                android:background="@color/transparent"
                android:layout_gravity="right"
                android:src="@drawable/deletesoft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/id_soft"
                android:text="coba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/e_input_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:enabled="false"
                    android:id="@+id/input_newsoft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="masukkan nama software" />
            </android.support.design.widget.TextInputLayout>


            <Button android:id="@+id/addsoft"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="tambah software"
                android:background="@color/cardview_dark_background"
                android:layout_marginTop="40dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
</LinearLayout>


